@import 'normalize.styl'

body
	background #4775A7
	color white
	font-family 'Open Sans Condensed', sans-serif
	font-size 20px
	text-shadow 4px 4px 2px rgba(150, 150, 150, 1)	
h1
	font-family 'Asset', cursive
	text-align center
	text-shadow 4px 4px 2px rgba(0, 0, 0, 1)
article
	-moz-box-shadow 7px 7px 5px 0px rgba(250, 204, 148, .75) inset, 7px 7px 5px 0px rgba(50, 50, 50, 0.75)
	-webkit-box-shadow 7px 7px 5px 0px rgba(250, 204, 148, .75) inset, 7px 7px 5px 0px rgba(50, 50, 50, 0.75)
	background #FB9B26
	border solid 3px white
	border-radius 20px
	box-shadow 7px 7px 5px 0px rgba(250, 204, 148, .75) inset, 7px 7px 5px 0px rgba(50, 50, 50, 0.75)
	padding .1em .9em
	width 35%
a
	-moz-border-radius 8px
	-moz-box-shadow 0px 9px 0px rgba(219,31,5,1) 0px 9px 25px rgba(0,0,0,.7)
	-moz-transition all .1s ease
	-ms-transition all .1s ease
	-o-transition all .1s ease
	-webkit-border-radius 8px
	-webkit-box-shadow 0px 9px 0px rgba(219,31,5,1) 0px 9px 25px rgba(0,0,0,.7)
	-webkit-transition all .1s ease
	background-color rgba(219,87,5,1)
	border-radius 8px
	box-shadow 0px 9px 0px rgba(219,31,5,1) 0px 9px 25px rgba(0,0,0,.7)
	color rgba(255,255,255,1)
	display block
	font-family 'Yanone Kaffeesatz'
	font-size 3em
	margin 10px auto
	padding 4px
	position relative
	text-align center
	text-decoration none
	transition all .1s ease
	width 160px

a:active {
    -moz-box-shadow 0px 3px 0px rgba(219,31,5,1), 0px 3px 6px rgba(0,0,0,.9)
    -webkit-box-shadow 0px 3px 0px rgba(219,31,5,1), 0px 3px 6px rgba(0,0,0,.9)
    box-shadow 0px 3px 0px rgba(219,31,5,1), 0px 3px 6px rgba(0,0,0,.9)
    position relative
    top 6px
}

.norma, article
	display inline-block
	vertical-align top